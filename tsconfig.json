{
	"compilerOptions": {
		"strict": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2019",
		"lib": ["es2019", "es2020"],
		"removeComments": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"strictNullChecks": true,
		"preserveConstEnums": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"incremental": true,
		"declaration": false,
		"sourceMap": true,
		"skipLibCheck": true,
		"outDir": "dist",
	},
	"include": ["credentials/**/*.ts", "nodes/**/*.ts", "test/**/*.ts",],
	"exclude": ["**/dist/**/*", "**/node_modules/**/*"],
}
